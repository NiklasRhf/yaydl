{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yaydl",
  "version": "0.2.4",
  "identifier": "com.yaydl",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "YaYDL",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffplay",
      "binaries/ffprobe",
      "binaries/yt-dlp"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCMTBCMDdDNjk1M0NCNDMKUldSRHkxTnBmTEFRSzdhSXBRcG54S3o4N1pPYzBLM1BwcEViLzJnQU1IWjhRU09qUFh4KzhONHcK",
      "endpoints": [
        "https://github.com/NiklasRhf/yaydl/releases/latest/download/latest.json"
      ]
    }
  }
}
